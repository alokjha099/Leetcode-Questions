

 public static int reverse(int num){
        int rem=0;
        int rev=0;

        for (int i = 0; 0 <  num; i++) {

            rem=num % 10;

            rev= (rev*10) + rem ;

            num=num/10;
        }
        return rev;
    }

# here we simply divide the number by 10 and multiply the reminder by 10 in rev variable to keep the next
# iteration .
